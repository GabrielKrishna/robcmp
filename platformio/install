mkdir toolchain-robcmp
cd toolchain-robcmp && tar xfz toolchain-robcmp-*.tar.gz
ln -s `realpath platform` ~/.platformio/platforms/robcmp
ln -s `realpath toolchain-robcmp` ~/.platformio/packages/toolchain-robcmp
ln -s `realpath vscode-syntax` ~/.vscode/extensions/robcmpsyntax
echo "Open the samples folder and try to build and upload!"
echo "\tcode samples/avr328p"
echo "\tcode samples/stm32f1"
